<div class="my-2 pb-5">
  <h3 class="mt-3 text-4xl leading-8 font-medium tracking-tight text-gray-900">Account</h3>
</div>

<%= form_with(model: Current.user, url: edit_password_path,  local: true) do |f| %>

  <%= render partial: "shared/form_errors", locals: {f: f} %>

  <div class="mb-3">
    <%= f.password_field :password, class: "input", placeholder: "password" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password_confirmation, class: "input", placeholder: "password confirmation" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Update Password", class: "btn-blue" %>
  </div>

<% end %>