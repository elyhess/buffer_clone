<div class="mb-3 card card-body">
  <div class="me-4">
    <%= image_tag automated_tweet.twitter_account.image, class: "rounded-circle" %>
    <%= link_to "@#{automated_tweet.twitter_account.username}", "https://twitter.com/#{automated_tweet.twitter_account.username}", target: :_blank %><br>
    <div class="mt-3">
      Theme: <%= automated_tweet.body %><br>

      <% if Time.now > automated_tweet.stop_at %>
        This operation ran for <%= ((automated_tweet.stop_at - automated_tweet.created_at) / 60).round(0) %> minutes.<br>
      <% else %>
        Running until <%= l automated_tweet.stop_at, format: :long %><br>
        <div class="mt-3">
          <%= button_to "Cancel", automated_tweet_path(automated_tweet), method: :delete, class: "btn btn-sm btn-outline-danger"%>
        </div>
      <% end %>

      Post Interval: <%= automated_tweet.post_interval %> hours
    </div>
  </div>
</div>
