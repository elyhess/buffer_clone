<div class="d-flex justify-content-between align-items-center">
  <h1>Automate Tweets</h1>

  <% if Current.user.twitter_accounts.any? %>
    <%= link_to "Create Tweet Automation", new_automated_tweet_path, class: "btn btn-primary" %>
  <% end %>

  <% if Current.user.twitter_accounts.none? %>
    <%= button_to "Add a Twitter account", '/auth/twitter', class: "btn btn-primary"  %>
  <% end %>

</div>

<%= render @automated_tweets %>
