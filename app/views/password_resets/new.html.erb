<div class="my-2 pb-5">
  <h3 class="mt-3 text-4xl leading-8 font-medium tracking-tight text-gray-900">Forgot your password?</h3>
</div>


<%= form_with url: password_reset_path do |f| %>

  <div class="mb-3">
    <%= f.text_field :email, class: "input", placeholder: "example@email.com" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Reset Password", class: "btn-blue" %>
  </div>

<% end %>